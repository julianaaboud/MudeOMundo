<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context="com.mudeomundo.aplicativo.mudeomundo.controller.MainActivity">

    <Button
        android:id="@+id/buttonOngId"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="Buscar ONG"
        android:padding="25dp"
        android:background="@drawable/button_shape"
        android:layout_alignBaseline="@+id/buttonAçãoVoluntariaId"
        android:layout_alignBottom="@+id/buttonAçãoVoluntariaId"
        android:layout_toLeftOf="@+id/buttonAçãoVoluntariaId"
        android:layout_toStartOf="@+id/buttonAçãoVoluntariaId" />

    <Button
        android:id="@+id/buttonAçãoVoluntariaId"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="206dp"
        android:layout_weight="1"
        android:background="@drawable/button_shape"
        android:elevation="1dp"
        android:padding="25dp"
        android:text="Ação Voluntária" />

    <ImageView
        android:id="@+id/imagemLogoId"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/novologo"
        android:cropToPadding="false"
        android:layout_above="@+id/buttonOngId"
        android:layout_alignLeft="@+id/buttonOngId"
        android:layout_alignStart="@+id/buttonOngId"
        android:layout_alignRight="@+id/buttonAçãoVoluntariaId"
        android:layout_alignEnd="@+id/buttonAçãoVoluntariaId" />

    <TextView
        android:id="@+id/textViewNaoECadastradoId"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/botaoLoginId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:elevation="1dp"
        android:onClick="abrirCadastroUsuario"
        android:textSize="20sp"
        android:text="Não é cadastrado ainda? Cadastre-se" />

    <TextView
        android:id="@+id/botaoLoginId"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:padding="15dp"
        android:elevation="1dp"
        android:layout_marginTop="50dp"
        android:text="Login"
        android:layout_below="@+id/buttonOngId"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
